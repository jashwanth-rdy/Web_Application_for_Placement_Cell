              value="1"
            />
            <input type="hidden" name="OT" value="0">
          </div>
          <div class="form-check form-switch col">
            <input type="hidden" name="GD" value="0">
            <label class="form-check-label" for="Switch4"
              >Group Discussion</label
            >
            <input
            name="GD"
              class="form-check-input"
              type="checkbox"
              role="switch"
