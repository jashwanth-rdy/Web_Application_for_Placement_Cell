  </head>
  <body>
    <!-- Navbar Start -->

    <%- include('../partials/recnavbar.ejs')%>

    <!-- Navbar End -->
    <div class="container form">
      <h2 class="heading">Job Announcement Form</h2>
      <div class="container">
      <form action="/rec/<%- rec.Comp_id %>/newjob" method="POST" class="row g-3 validated-form" enctype="multipart/form-data" novalidate>
        <span class="subheadingsj"><h5>Job Profile</h5></span>
        <input type="hidden" name="folder" value="Description">
        <input type="hidden" name="id" value="<%- rec.Comp_id %>">
        <input type="hidden" name="CompName" value="<%- rec.Name %>">

        <div class="col-md-6">
          <label for="inputCompany" class="form-label"
            >Company <sup class="mand">*</sup></label
          >
          <input
            name="Name"
            type="text"
            class="form-control"
            id="inputCompany"
            value="<%- rec.Name %>"
            aria-label="disabled input "
            disabled
          />
          <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">This field is required</div>
        </div>
        <div class="col-md-6">
          <label for="inputTitle" class="form-label"
            >Job Title <sup class="mand">*</sup>
          </label>
          <input name="Title" type="text" class="form-control" id="inputTitle" required />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">This field is required</div>
        </div>

        <div class="col-md-4">
          <label for="inputWork" class="form-label"
            >Workplace Type <sup class="mand">*</sup></label
          >
          <select name="Workplace" id="inputWork" class="form-select" required>
            <option selected disabled hidden value="">Select</option>
            <option value="On-Site">On-Site</option>
            <option value="Hybrid">Hybrid</option>
            <option value="Remote">Remote</option>
          </select>
          <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">This field is required</div>
        </div>
        <div class="col-md-4">
          <label for="inputLocation" class="form-label"
            >Location(NA if Remote) <sup class="mand">*</sup>
          </label>
          <input
          name="Location"
            type="text"
            class="form-control"
            id="inputLocation"
            placeholder=""
            required
          />
          <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">This field is required</div>
        </div>
        <div class="col-md-4">
          <label for="inputType" class="form-label"
            >Job Type <sup class="mand">*</sup></label
          >
          <select oninput="Change(this)" name="Type" id="inputType" class="form-select" required>
            <option selected disabled hidden value="">Select</option>
            <option value="Full-time">Full-time</option>
            <option value="Internship">Internship</option>
          </select>
          <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">This field is required</div>
        </div>
        <div class="col-md-4">
          <label for="inputNumber" class="form-label"
            >No. of Expected Hires
          </label>
          <input
            name="NoofHires"
            type="number"
            class="form-control"
            id="inputNumber"
            min="1"
            placeholder=""
          />
            <div class="invalid-feedback">Value should be greater than zero</div>
        </div>
        <div class="col-md-4">
          <label id="insal" for="inputSalary" class="form-label"
            >CTC(in LPA)
          </label><sup class="mand">*</sup>
          <input
            name="Salary"
            type="number"
            class="form-control"
            id="inputSalary"
            min="1"
            placeholder=""
            required
          />
          <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Value should be greater than zero</div>
        </div>
        <div class="col-md-4">
          <label for="formFile" class="form-label"
            >Job Description(.pdf format)<sup class="mand">*</sup></label
          >
          <input
            name="Description"
            class="form-control"
            type="file"
            accept=".pdf"
            id="formFile"
            required
          />
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">This field is required</div>
        </div>

