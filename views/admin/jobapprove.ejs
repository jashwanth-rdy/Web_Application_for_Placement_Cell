<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <link rel="icon" href="/images/logo1.png" type="image/icon type" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/stu.css" />
  </head>
  <body class="d-flex flex-column vh-100">
    <!-- Navbar Start -->

    <%- include('../partials/admnavbar.ejs')%>

    <!-- Navbar End -->

    <!-- Login Page Start -->
    <div class="full">
      <div class="container py-3 d-block">
        <div class="col-md-4 offset-md-4">
          <h2 class="py-3 text-center heading">
            Recruitment Request '<%- job.Title %>'
          </h2>
          <form
            action="/ad/<%- adm.Emp_id %>/jobapp/<%- job.Job_id %>"
            method="POST"
            class="validated-form"
            novalidate
          >
            <div class="mb-3">
              <label for="inputOpenDate" class="form-label"
                >Application Open Date</label
              >
              <input
                name="AppOpenDate"
                type="date"
                class="form-control"
                id="inputOpenDate"
                required
              />
              <div class="invalid-feedback">Invalid Date</div>
            </div>

            <div class="mb-3">
              <label for="inputCloseDate" class="form-label"
                >Application Close Date</label
              >
              <input
                name="AppCloseDate"
                oninput="myFunction()"
                type="date"
                class="form-control"
                id="inputCloseDate"
                required
              />
              <div class="invalid-feedback">Invalid Date</div>
            </div>

            <button type="submit" class="btn btn-success col-12 mt-3">
              Submit
            </button>
          </form>
        </div>
      </div>
    </div>
    <!-- Login Page End -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
    <script>
      (function () {
        "use strict";
        const forms = document.querySelectorAll(".validated-form");
        Array.from(forms).forEach(function (form) {
          form.addEventListener(
            "submit",
            function (event) {
              if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
              }
              form.classList.add("was-validated");
            },
            false
          );
        });
      })();
    </script>
  </body>
</html>
