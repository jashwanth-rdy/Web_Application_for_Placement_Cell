<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/jposted.css" />
  </head>
  <body>
    <!-- Navbar Start -->

    <%- include('../partials/admnavbar.ejs')%>

    <!-- Navbar End -->
    <div class="container">
      <div>
        <h3 class="heading">Students Registered</h3>
      </div>
      <% if(stud.length <= 0 ){ %>
              <h4 class="text-center mt-4">No New Requests found</h4>
            <% }else{ %>
      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Roll.No.</th>
              <th scope="col">Email</th>
              <th scope="col">Name</th>
              <th scope="col">Course</th>
              <th scope="col">Department</th>
              <th scope="col">Year of Passing</th>
              <th scope="col">CGPA</th>
              <th scope="col">Contact</th>
              <th scope="col">JobsApplied</th>
              <!-- <th scope="col">Match</th> -->
            </tr>
          </thead>
          <tbody>
            <% for(let i=0;i<stud.length;i++){ %>
            <tr>
              <th scope="row"><%- stud[i].RollNo %></th>
              <td><a class="text-decoration-none" href="mailto:<%- stud[i].Email %>"><%- stud[i].Email %></a></td>
              <td><%- stud[i].FirstName %> <%- stud[i].LastName %></td>
              <td><%- stud[i].Course %></td>
              <td><%- stud[i].Department %></td>
              <td><%- stud[i].YearofPassing %></td>
              <td><%- stud[i].CGPA %></td>
              <td><a class="text-decoration-none" href="tel:+91<%- stud[i].Contact %>"><%- stud[i].Contact %></a></td>
              <td>
                <form action="/ad/<%- adm.Emp_id %>/jobsapp" method="GET">
                  <input type="hidden" name="rollno" value="<%- stud[i].RollNo %>">
                  <button type="submit" class="btn btn-secondary btn-sm">View</button>
                </form>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
      <% } %>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
