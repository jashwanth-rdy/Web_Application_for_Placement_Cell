<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/stu.css" />
  </head>
  <body>
    <!-- Navbar Start -->

    <%- include('../partials/stunavbar.ejs')%>

    <!-- Navbar End -->

    <div class="container-fluid head">
      <h2 class="container">Latest Placement Drives</h2>
    </div>
    <% if(full.length <= 0 ){ %>
              <h4 class="text-center mt-4 mb-4">No New Placement Drives found</h4>
            <% }else{ %>
    <div class="container">
      <div class="row no-gutters">
        <% for(let i=0;i<full.length;i++){ %>
        <div class="col justify-content-center job-col">
          <h3><%- full[i].Title %></h3>
          <a class="text-decoration-none" target="_blank" href="<%- full[i].Website %>"><h4><%- full[i].Name%></h4></a>
          <p>CTC : <%- full[i].Salary %> LPA</p>
          <p>Location : <%- full[i].Location %></p>
          <p>Last Date : <%- full[i].AppCloseDate.toLocaleDateString() %></p>
          <a href="/stu/<%- stud.RollNo %>/apply/<%- full[i].Job_id %>" class="btn btn-info">Apply Now</a>
          <button type="button" data-bs-toggle="modal" data-bs-target="#<%- full[i].Job_id %>" class="btn btn-outline-info">Know More</button>
        </div>
        <% } %>
      </div>
    </div>
    <% } %>
    <div class="container-fluid head">
      <h2 class="container">Latest Internships</h2>
    </div>
    <% if(intern.length <= 0 ){ %>
      <h4 class="text-center mt-4 mb-4">No New Internships found</h4>
    <% }else{ %>
    <div class="container">
      <div class="row">
        <% for(let i=0;i<intern.length;i++){ %>
        <div class="col justify-content-center job-col">
          <h3><%- intern[i].Title %></h3>
          <a class="text-decoration-none" target="_blank" href="<%- intern[i].Website %>"><h4><%- intern[i].Name %></h4></a>
          <p>Stipend : Rs. <%- intern[i].Salary %> /- P.M</p>
          <p>Location : <%- intern[i].Location %></p>
          <p>Last Date : <%- intern[i].AppCloseDate.toLocaleDateString() %></p>
          <a href="/stu/<%- stud.RollNo %>/apply/<%- intern[i].Job_id %>" class="btn btn-info">Apply Now</a>
          <button type="button" data-bs-toggle="modal" data-bs-target="#<%- intern[i].Job_id %>" class="btn btn-outline-info">Know More</button>
        </div>
        <% } %>
      </div>
    </div>
    <% } %>
    <% for(let i=0;i<full.length;i++) {%>
      <div class="modal fade modal-lg" id="<%- full[i].Job_id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel"><%- full[i].Title %> - <%- full[i].Name %></h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <p style="font-size: 1em;"> <b>Company </b>: <%- full[i].Name %></p>
              <p style="font-size: 1em;"><b>Website </b>: <a href="<%- full[i].Website %>"><%- full[i].Website %></a></p>
              <p style="font-size: 1em;"><b>Sector </b>: <%- full[i].Sector %></p>
              <p style="font-size: 1em;"><b>Industry </b>: <%- full[i].Industry %></p>
              <p style="font-size: 1em;"><b>Job Title </b>: <%- full[i].Title %></p>
              <p style="font-size: 1em;"><b>Workplace </b>: <%- full[i].Workplace %></p>
              <p style="font-size: 1em;"><b>Location </b>: <%- full[i].Location %></p>
              <p style="font-size: 1em;"><b>Type </b>: <%- full[i].Type %></p>
              <p style="font-size: 1em;"><b>CTC </b>: <%- full[i].Salary %> LPA</p>
              <p style="font-size: 1em;"><b>Application Open </b>: <%- full[i].AppOpenDate.toLocaleDateString() %></p>
              <p style="font-size: 1em;"><b>Application Close </b>: <%- full[i].AppCloseDate.toLocaleDateString() %> </p>
              <p style="font-size: 1em;"><b>Job Description </b>: <a href="/uploads/Description/<%- full[i].Desfile %>" download="<%- full[i].Job_id %>">Download</a> </p>
              <h4 style="font-size: 1em;">Eligibility Criteria</h4>
              <p class="mt-3" style="font-size: 1em;"><b>Course(s) </b> : <%= full[i].BTechElg === 1 ? 'B.Tech' : ' ' %><%= full[i].MTechElg === 1 ? ' M.Tech' : ' ' %></p>
              <p style="font-size: 1em;"><b>Department(s) </b>: <%= full[i].BioTechElg === 1 ? 'BioTech' : ' ' %> <%= full[i].CivilElg === 1 ? ' Civil' : ' ' %><%= full[i].ChemicalElg === 1 ? ' Chemical' : ' ' %><%= full[i].CSEElg === 1 ? ' CSE' : ' ' %><%= full[i].ECEElg === 1 ? ' ECE' : ' ' %><%= full[i].EEEElg === 1 ? ' EEE' : ' ' %><%= full[i].MechElg === 1 ? ' Mechanical' : ' ' %><%= full[i].MMEElg === 1 ? ' MME' : ' ' %> </p>
              <p style="font-size: 1em;"><b>Year(s) of Passing </b>: <%= full[i].Elg2023 === 1 ? '2023' : ' ' %><%= full[i].Elg2024 === 1 ? ' 2024' : ' ' %><%= full[i].Elg2025 === 1 ? ' 2025' : ' ' %><%= full[i].Elg2026 === 1 ? ' 2026' : ' ' %> </p>
              <p style="font-size: 1em;"><b>CGPA </b>: <%- full[i].CGPA %> </p> 
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
              <a href="/stu/<%- stud.RollNo %>/apply/<%- full[i].Job_id %>" class="btn btn-info">Apply Now</a>
            </div>
          </div>
        </div>
      </div>
    <% } %>
    <% for(let i=0;i<intern.length;i++) {%>
      <div class="modal fade modal-lg" id="<%- intern[i].Job_id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel"><%- intern[i].Title %> - <%- intern[i].Name %></h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <p style="font-size: 1em;"> <b>Company </b>: <%- intern[i].Name %></p>
              <p style="font-size: 1em;"><b>Website </b>: <a href="<%- intern[i].Website %>"><%- intern[i].Website %></a></p>
              <p style="font-size: 1em;"><b>Sector </b>: <%- intern[i].Sector %></p>
              <p style="font-size: 1em;"><b>Industry </b>: <%- intern[i].Industry %></p>
              <p style="font-size: 1em;"><b>Job Title </b>: <%- intern[i].Title %></p>
              <p style="font-size: 1em;"><b>Workplace </b>: <%- intern[i].Workplace %></p>
              <p style="font-size: 1em;"><b>Location </b>: <%- intern[i].Location %></p>
              <p style="font-size: 1em;"><b>Type </b>: <%- intern[i].Type %></p>
              <p style="font-size: 1em;"><b>Stipend </b>: Rs. <%- intern[i].Salary %> P.M</p>
              <p style="font-size: 1em;"><b>Application Open </b>: <%- intern[i].AppOpenDate.toLocaleDateString() %></p>
              <p style="font-size: 1em;"><b>Application Close </b>: <%- intern[i].AppCloseDate.toLocaleDateString() %> </p>
              <p style="font-size: 1em;"><b>Job Description </b>: <a href="/uploads/Description/<%- intern[i].Desfile %>" download="<%- intern[i].Job_id %>">Download</a> </p>

              <h4 style="font-size: 1em;">Eligibility Criteria</h4>
              <p class="mt-3" style="font-size: 1em;"><b>Course(s) </b> : <%= intern[i].BTechElg === 1 ? 'B.Tech' : ' ' %><%= intern[i].MTechElg === 1 ? ' M.Tech' : ' ' %></p>
              <p style="font-size: 1em;"><b>Department(s) </b>: <%= intern[i].BioTechElg === 1 ? 'BioTech' : ' ' %> <%= intern[i].CivilElg === 1 ? ' Civil' : ' ' %><%= intern[i].ChemicalElg === 1 ? ' Chemical' : ' ' %><%= intern[i].CSEElg === 1 ? ' CSE' : ' ' %><%= intern[i].ECEElg === 1 ? ' ECE' : ' ' %><%= intern[i].EEEElg === 1 ? ' EEE' : ' ' %><%= intern[i].MechElg === 1 ? ' Mechanical' : ' ' %><%= intern[i].MMEElg === 1 ? ' MME' : ' ' %> </p>
              <p style="font-size: 1em;"><b>Year of Passing </b>: <%= intern[i].Elg2023 === 1 ? '2023' : ' ' %><%= intern[i].Elg2024 === 1 ? ' 2024' : ' ' %><%= intern[i].Elg2025 === 1 ? ' 2025' : ' ' %><%= intern[i].Elg2026 === 1 ? ' 2026' : ' ' %> </p>
              <p style="font-size: 1em;"><b>CGPA </b>: <%- intern[i].CGPA %> </p> 
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-light" data-bs-dismiss="modal">Close</button>
              <a href="/stu/<%- stud.RollNo %>/apply/<%- intern[i].Job_id %>" class="btn btn-info">Apply Now</a>
            </div>
          </div>
        </div>
      </div>
    <% } %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
